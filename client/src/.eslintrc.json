// .eslintrc.json
{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    // "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "react/react-in-jsx-scope": 0,
    "react/jsx-uses-react": 0,
    "import/no-unresolved": "off",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": false,
        "parser": "flow",
        "trailingComma": "all",
        "endOfLine": "auto"
      }
    ]
  },
  "plugins": ["prettier"]
}
