{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "react/react-in-jsx-scope": 0,
      "react/jsx-uses-react": 0,
      "prettier/prettier": "off",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "ts": "never",
          "tsx": "never"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": ["src"] 
        }
      }
    },
    "plugins": ["prettier"],
    "overrides": [
      {
        "files": ["*.tsx"],
        "rules": {
          "react/jsx-filename-extension": [1, { "extensions": [".tsx"] }]
        }
      }
    ]
  }